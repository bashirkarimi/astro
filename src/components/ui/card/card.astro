---
type AsTag = "div" | "section" | "article";

interface Props {
  as?: AsTag;
  class?: string;
}

const { as = "article", class: className = "" } = Astro.props;

const Tag = as;
---

<Tag
  data-slot="card"
  class={`bg-card text-card-foreground flex flex-col gap-6 rounded-xl border shadow-sm overflow-hidden transition-all group-hover:border-accent/50 ${className}`}
>
  <slot />
</Tag>
