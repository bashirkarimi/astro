---
import { Image } from "astro:assets";
---

<header
  class="site-header py-2 sticky top-0 z-50 w-full border-b border-border bg-background/95 backdrop-blur supports-backdrop-filter:bg-background/60 [container-type:scroll-state] [container-name:site-header]"
>
  <div class="header-content mx-auto h-16 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 font-semibold text-lg">
      <Image
        src="/images/astro-logo.png"
        alt="My Astro Site Logo"
        width={48}
        height={48}
        class="w-12 h-12 aspect-square object-cover"
      />
      <span>Blog</span>
    </a>

    <nav class="hidden md:flex items-center gap-2 min-w-fit">
      <a
        href="/"
        class="relative text-sm font-medium px-4 py-2 text-foreground/80 hover:text-foreground transition-colors [anchor-name:--nav]"
      >
        Home
      </a>
      <a
        href="/blogs"
        class="text-sm font-medium px-4 py-2 text-foreground/80 hover:text-foreground transition-colors"
      >
        Blog
      </a>
      <a
        href="/docs"
        class="text-sm font-medium px-4 py-2 text-foreground/80 hover:text-foreground transition-colors"
      >
        Documentation
      </a>
      <div class="bg-gray-200 absolute [position-anchor:--nav] top-[anchor(top)] left-[anchor(left)] right-[anchor(right)] bottom-[anchor(bottom)] rounded-full transition-all duration-300 ease-in-out -z-10"></div>
    </nav>
    </span>  
  </div>
</header>
